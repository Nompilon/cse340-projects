<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
        <main class="register-page">
            <h1>
                <%= title %>
            </h1>

            <!-- Flash messages -->
            <%- messages() %>
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                <!-- Registration form -->
                <form action="/account/register" method="post" class="register-form">

                    <!-- First Name -->
                    <label for="first_name">First Name</label>
                    <input type="text" id="account_firstname" name="account_firstname" required
                        value="<%= typeof first_name !== 'undefined' ? first_name : '' %>">

                    <!-- Last Name -->
                    <label for="last_name">Last Name</label>
                    <input type="text" id="account_lastname" name="account_lastname" required
                        value="<%= typeof last_name !== 'undefined' ? last_name : '' %>">

                    <!-- Email -->
                    <label for="email">Email Address</label>
                    <input type="email" id="account_email" name="account_email" required
                        value="<%= typeof email !== 'undefined' ? email : '' %>">

                    <!-- Password -->
                    <label for="accountPassword">Password:</label>
                    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
                        character</span>
                    <input type="password" name="account_password" id="accountPassword" required
                        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                        
                    <!-- Submit Button -->
                    <button type="submit">Register</button>
                </form>

                <!-- Link back to login page -->
                <p>Already have an account? <a href="/account/login">Login here</a></p>
        </main>

</body>

</html>