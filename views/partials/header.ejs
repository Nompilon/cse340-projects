<header id="top-header">
    <div class="siteName">
        <h1>CSE Motors</h1>
    </div>
    <div id="tools">
        <% if (locals.accountData) { %>
            <!-- Only visible when logged in -->
            <a title="Go to your account" href="/account">Welcome <%= accountData.account_firstname %></a>
            <a title="Click to log out" href="/account/logout">Logout</a>
            <% } else { %>
                <!-- Only visible when not logged in -->
                <a title="Click to log in" href="/account/login">My Account</a>
                <% } %>
    </div>
</header>

